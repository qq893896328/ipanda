<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_common_bg"
    tools:context="cn.cntv.activity.my.AgreePostActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <Button
                android:id="@+id/agree_post_back"
                android:layout_width="@dimen/title_bar_back_button_width"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="11dp"
                android:drawableLeft="@drawable/fenlei_fanhui"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_bar_title_size"
                android:layout_gravity="center"
                android:textColor="@color/title_bar_title_color"
                android:text="央视网络服务使用协议"
                />
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_divider_line_bg"
            />
        <ScrollView
            android:layout_width="wrap_content"
            android:padding="11dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/agree_post_text"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/agree_post"
                />
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
