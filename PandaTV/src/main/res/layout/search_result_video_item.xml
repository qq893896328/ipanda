<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >
        ˙

        <FrameLayout
            android:id="@+id/pe_listview_item_one_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/pe_listview_item_one_img"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@drawable/_tw" />

            <RelativeLayout
                android:id="@+id/pe_listview_item_one_relayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/default_time_view" >

                <!--
                 <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparent_half" >
                -->

                <TextView
                    android:id="@+id/pe_listview_item_one_videotime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/play"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="02:39"
                    android:textSize="36px"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/pe_listview_item_one_frame"
            android:layout_alignTop="@id/pe_listview_item_one_frame"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_toRightOf="@id/pe_listview_item_one_frame" >

            <TextView
                android:id="@+id/pe_listview_item_one_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="30px"
                android:text="[光影中的侠客]电影《叶问2》：叶问与其他武事比武"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/pe_listview_item_one_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="20dp"
                android:textSize="28px"
                android:layout_below="@id/pe_listview_item_one_title"
                android:layout_alignParentBottom="true"
                android:text="09-21-2015 06:18" />

            <!--
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               >
               <TextView
                   android:id="@+id/pe_listview_item_one_type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:visibility="gone"
                   android:text="微时评"
                   />



           </RelativeLayout>
            -->
        </RelativeLayout>
    </RelativeLayout>

    <!--  <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@color/gray"
           android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         /> -->

</LinearLayout>