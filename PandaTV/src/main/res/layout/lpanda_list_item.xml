<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:background="@color/white"
     >

    <ImageView
        android:id="@+id/lpanda_demand_live"
        android:layout_width="400px"
        android:layout_height="225px"
         android:scaleType="fitXY" 
        android:layout_margin="25px" />

    <TextView
        android:id="@+id/lpanda_demand_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lpanda_demand_live"
        android:lineSpacingExtra="12px"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:paddingTop="50px"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="#000"
        android:textSize="42px" />

    <TextView
        android:id="@+id/lpanda_demand_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lpanda_demand_live"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/lpanda_demand_live"
        android:padding="16px"
        android:paddingTop="14px"
        android:paddingBottom="25px"
        android:text=""
        android:textSize="32px" />

    <RelativeLayout
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lpanda_demand_live"
        android:layout_alignLeft="@+id/lpanda_demand_live"

        >

        <TextView
            android:id="@+id/lpanda_videoLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            android:gravity="center_vertical"
            android:paddingRight="10px"
            android:text="0"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/play"
            android:background="@drawable/default_time_view"
            android:textColor="@color/white"
            android:textSize="36px" />


        
    </RelativeLayout>
	
    

</RelativeLayout>