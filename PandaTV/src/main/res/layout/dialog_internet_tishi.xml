<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pe_dialog_tips_view_bg"

    >
    <TextView 
        android:id="@+id/play_continue_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您正在使用移动数据网络，所产生的流量费由当地运营商收取，是否继续？"
        android:layout_marginLeft="50px"
        android:textColor="#4B4B4B"
        android:layout_marginRight="50px"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"
        android:textSize="50px"
        android:gravity="center_horizontal"
        />
    
     <View 
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#DDDDDD"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:background="@drawable/pe_dialog_tips_view_bg"
        >
        <TextView 
            android:id="@+id/play_continue_cancel"
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#4B4B4B"
            android:textSize="50px"
            android:gravity="center"
            android:background="@drawable/pe_dialog_tips_view_bg"
            android:layout_height="match_parent"
            />
        <View 
            android:background="#DDDDDD"
            android:layout_width="3px"

            android:id="@+id/play_continue_fenge"
            android:layout_height="match_parent"
            />
        <TextView 
            android:id="@+id/play_continue_sure"
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="50px"
            android:textColor="#4B4B4B"
            android:gravity="center"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    
    

</LinearLayout>
