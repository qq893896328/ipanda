<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/home_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_tab_back"
    android:paddingBottom="1px" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/llHomeHLGroup1"
            android:layout_width="340px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15px" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px" >

                <ImageView
                    android:id="@+id/ivHomeHLBigImg1"
                    android:layout_width="340px"
                    android:layout_height="180px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/_row1_3" />

                <RelativeLayout
                    android:layout_width="170px"
                    android:layout_height="62px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/default_time_view"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/ivHomeHLSmImg1"
                        android:layout_width="32px"
                        android:layout_height="32px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15px"
                        android:src="@drawable/lpanda_live_layer" />

                    <TextView
                        android:id="@+id/tvHomeVlPlayTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/ivHomeHLSmImg1"
                        android:text="Live"
                        android:textColor="@color/white"
                        android:textSize="36px" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvHomeHLTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/home_text"
                android:textSize="42px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHomeHLGroup2"
            android:layout_width="340px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15px" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px" >

                <ImageView
                    android:id="@+id/ivHomeHLBigImg2"
                    android:layout_width="340px"
                    android:layout_height="180px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/_row1_3" />

                <RelativeLayout
                    android:layout_width="170px"
                    android:layout_height="62px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/default_time_view"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/ivHomeHLSmImg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15px"
                        android:src="@drawable/lpanda_live_layer" />

                    <TextView
                        android:id="@+id/tvHomeVlPlayTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/ivHomeHLSmImg2"
                        android:text="Live"
                        android:textColor="@color/white"
                        android:textSize="36px" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvHomeHLTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/home_text"
                android:textSize="42px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHomeHLGroup3"
            android:layout_width="340px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15px" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px" >

                <ImageView
                    android:id="@+id/ivHomeHLBigImg3"
                    android:layout_width="340px"
                    android:layout_height="180px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/_row1_3" />

                <RelativeLayout
                    android:layout_width="170px"
                    android:layout_height="62px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/default_time_view"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/ivHomeHLSmImg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15px"
                        android:src="@drawable/lpanda_live_layer" />

                    <TextView
                        android:id="@+id/tvHomeHLPlayTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/ivHomeHLSmImg3"
                        android:text="Live"
                        android:textColor="@color/white"
                        android:textSize="36px" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvHomeHLTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/home_text"
                android:textSize="42px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>