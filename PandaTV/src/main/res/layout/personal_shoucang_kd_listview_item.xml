<?xml version="1.0" encoding="utf-8"?>
<!-- 央视名栏列表的item布局——pj -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cctv_space"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/personal_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@drawable/checkbox_selector"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/personal_hy_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/personal_hy_item_img"
                android:layout_width="@dimen/tw_w"
                android:layout_height="@dimen/tw_h"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/_no_img" />

            <TextView
                android:id="@+id/personal_sc_listview_videoLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/personal_hy_item_img"
                android:layout_alignLeft="@id/personal_hy_item_img"
                android:background="@drawable/default_time_view"
                android:drawableLeft="@drawable/play"
                android:drawablePadding="3dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="2dp"
                android:paddingLeft="15px"
                android:paddingTop="2dp"
                android:text="02:39"
                android:textSize="36px"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/tw_h"
                android:orientation="vertical">

            <TextView
                android:id="@+id/personal_hy_listview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/cctv_tab_unsel" />
            
            <TextView
                android:id="@+id/personal_hy_listview_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginBottom="0dp"
                android:maxLines="2"
                android:visibility="gone"
                android:textColor="@color/cctv_tab_unsel" />

            <TextView
                android:id="@+id/personal_hy_listview_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="2"
                android:textSize="32px"
                android:text="09-21-2015 06:18"
                android:textColor="@color/pe_text_bg_gray" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="5px"
        android:layout_height="231px"
        android:scaleType="fitXY"
        android:src="@drawable/def_no_iv"
        android:visibility="gone" />

</LinearLayout>