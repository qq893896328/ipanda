<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:id="@+id/lpanda_tab_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/cctv_space"
	    android:paddingTop="6dp"
	    >
	    <cn.cntv.app.ipanda.view.LovePandaTabPageIndicator
	        android:id="@+id/lpanda_indicator"
	        android:layout_width="fill_parent"
	        android:layout_height="41dp"
	        android:background="#fff"
	         />
	</RelativeLayout>
	<cn.cntv.app.ipanda.ui.livechina.view.NoInteruViewPager
        android:id="@+id/lpanda_viewPager"
        android:layout_width="fill_parent"
        android:layout_below="@id/live_china_tab_layout"
        android:layout_height="fill_parent" />
</LinearLayout>
