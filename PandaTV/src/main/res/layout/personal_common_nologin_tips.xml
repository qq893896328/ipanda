<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/personal_nologin_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffb9b9b9">

        <TextView
            android:id="@+id/tv_player_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:text="@string/personal_his_logintips"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_biaoqing_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/blue"
            android:layout_toRightOf="@id/tv_player_content"
            />

        <TextView
            android:id="@+id/tv_close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/tv_biaoqing_btn"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/delete_gray"/>
    </RelativeLayout>

</RelativeLayout>