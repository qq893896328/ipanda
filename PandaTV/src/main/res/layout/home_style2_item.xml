<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/home_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_tab_back"
    android:orientation="vertical"
    android:paddingBottom="1px" >

    <LinearLayout
        android:id="@+id/llHomeSt2Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="408px"
            android:layout_height="229px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px" >

            <ImageView
                android:id="@+id/ivHomeSt2BigImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/pe_defaule_item_img" />

            <RelativeLayout
                android:id="@+id/rlHomeSt2PlayTime"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvHomeSt2PlayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imageView1"
                    android:layout_alignLeft="@id/imageView1"
                    android:background="@drawable/default_time_view"
                    android:drawableLeft="@drawable/play"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:text="02:39"
                    android:textColor="@color/white"
                    android:textSize="36px"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="228px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="30px" >

            <TextView
                android:id="@+id/tvHomeSt2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:paddingTop="30px"
                android:text="adfsasdfasdf"
                android:textColor="@color/home_text"
                android:textSize="42px" />

            <TextView
                android:id="@+id/tvHomeSt2Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="32px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>